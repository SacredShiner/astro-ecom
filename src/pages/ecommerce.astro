            <CardProduct 
              thumb_src = {product.thumb_src}
              thumb_alt = {product.thumb_alt}
              color = {product.color}
              colors = {product.colors}
              title = {product.title}
              description = {product.description}
              price = {product.price}
              position = "center"
            />
          </div>
        )}        
      </div>

      <div class="row">
        {data.products.map(product => 
          <div class="col-md-3">
            <CardProduct 
